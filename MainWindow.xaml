<Window x:Class="GestorCitasHospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorCitasHospital"
        mc:Ignorable="d"
        Title="Gestor de Citas Médicas"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Estilo para los Labels del menú -->
        <Style x:Key="MenuLabel" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#00AAFF" Height="30">
            <!-- Cita -->
            <StackPanel Orientation="Horizontal" Margin="10,0" MouseDown="LblCita_MouseDown" Cursor="Hand">
                <Image Source="/Cita.png" Width="25" Height="25" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Cita" Style="{StaticResource MenuLabel}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Paciente -->
            <StackPanel Orientation="Horizontal" Margin="10,0" MouseDown="LblPaciente_MouseDown" Cursor="Hand">
                <Image Source="/Paciente.png" Width="25" Height="25" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Paciente" Style="{StaticResource MenuLabel}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Medico -->
            <StackPanel Orientation="Horizontal" Margin="10,0" MouseDown="LblMedico_MouseDown" Cursor="Hand">
                <Image Source="/Medico.png" Width="25" Height="25" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Medico" Style="{StaticResource MenuLabel}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Historia Clínica -->
            <StackPanel Orientation="Horizontal" Margin="10,0" MouseDown="LblHistoria_MouseDown" Cursor="Hand">
                <Image Source="/Historia_Clinica.png" Width="25" Height="25" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Historia Clínica" Style="{StaticResource MenuLabel}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Estadísticas -->
            <StackPanel Orientation="Horizontal" Margin="10,0" MouseDown="LblEstadisticas_MouseDown" Cursor="Hand">
                <Image Source="/Estadisticas.png" Width="25" Height="25" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor=""/>
                <Label Content="Estadísticas" Style="{StaticResource MenuLabel}" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Centro con logo -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="601*"/>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="180*"/>
            </Grid.ColumnDefinitions>
            <Image Source="logo_medicina.png"
                   Width="436" Height="454"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="182,-9,0,0" Grid.ColumnSpan="2"/>
        </Grid>
    </DockPanel>
</Window>

