        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resumen de Citas" Height="500" Width="800" Background="White">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#00AAFF" Height="30">
            <!-- Barra superior -->
        </StackPanel>

        <StackPanel Margin="30">
			<Label Content="Filtrar por m&#233;dico, fecha o estado:" Foreground="#00AAFF" FontWeight="Bold"/>
			<!-- Filtros combinados aqui -->

            <DataGrid x:Name="dgCitasResumen" AutoGenerateColumns="False" Margin="0,20,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>
