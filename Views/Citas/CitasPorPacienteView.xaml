<Window x:Class="GestorCitasHospital.Views.Citas.CitasPorPacienteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Citas por Paciente" Height="500" Width="800" Background="White">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#00AAFF" Height="30">
            <!-- Barra superior -->
        </StackPanel>

        <StackPanel Margin="30">
            <Label Content="Documento del paciente:" Foreground="#00AAFF" FontWeight="Bold"/>
            <TextBox x:Name="txtDocumento" Height="30"/>

            <Button Content="Buscar"
                    Background="#00AAFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="30"
                    Width="100"
                    Margin="0,10"/>

            <DataGrid x:Name="dgCitas" AutoGenerateColumns="False" Margin="0,20,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>