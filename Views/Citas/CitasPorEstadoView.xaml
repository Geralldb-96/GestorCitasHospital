<Window x:Class="GestorCitasHospital.Views.Citas.CitasPorEstadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Citas por Estado" Height="500" Width="800" Background="White">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#00AAFF" Height="30">
            <!-- Barra superior -->
        </StackPanel>

        <StackPanel Margin="30">
            <Label Content="Seleccione estado:" Foreground="#00AAFF" FontWeight="Bold"/>
            <ComboBox x:Name="cmbEstado" Height="30">
                <ComboBoxItem Content="Pendiente"/>
                <ComboBoxItem Content="Confirmada"/>
                <ComboBoxItem Content="Cancelada"/>
            </ComboBox>

            <Button Content="Buscar"
                    Background="#00AAFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="30"
                    Width="100"
                    Margin="0,10"/>

            <DataGrid x:Name="dgCitas" AutoGenerateColumns="False" Margin="0,20,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>