<Window x:Class="GestorCitasHospital.Views.Citas.CitasCrearView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agendar Cita" Height="500" Width="800" Background="White">
    <Window.Resources>
        <Style x:Key="MenuLabel" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#00AAFF" Height="30">
            <!-- Items del menu -->
            <!-- Reutiliza los StackPanel con Image + Label como en MainWindow -->
        </StackPanel>

        <!-- Formulario -->
        <StackPanel Margin="30">
            <Label Content="Paciente:" Foreground="#00AAFF" FontWeight="Bold"/>
            <ComboBox x:Name="cmbPacientes" Height="30"/>

            <Label Content="Medico:" Foreground="#00AAFF" FontWeight="Bold"/>
            <ComboBox x:Name="cmbMedicos" Height="30"/>

            <Label Content="Fecha:" Foreground="#00AAFF" FontWeight="Bold"/>
            <DatePicker x:Name="dpFecha" Height="30"/>

            <Label Content="Hora:" Foreground="#00AAFF" FontWeight="Bold"/>
            <ComboBox x:Name="cmbHora" Height="30"/>

            <Button Content="Agendar"
                    Background="#00AAFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Width="150"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>